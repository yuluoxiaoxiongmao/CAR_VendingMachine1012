<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.vendingmachine.ui.customview.MyVideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/sp_adv_video"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/top_video_img"
        android:gravity="bottom|center"
        android:id="@+id/layout_xz_video"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_xz_video"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/pb_xz_video"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/video_progress_bj"/>
    </LinearLayout>
</FrameLayout>

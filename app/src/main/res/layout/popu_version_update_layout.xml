<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/tv_isplay_bj"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:text="版本更新"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:textColor="@color/colorAccent"
        android:text="优化IU,及稳定性"/>

    <ProgressBar
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/pb_version_updata"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/img_progress"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:id="@+id/bt_vi_confirm"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/bt_purchange_bj"
        android:text="确定"/>
</LinearLayout>

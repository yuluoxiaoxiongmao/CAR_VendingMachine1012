<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_car_test"
    tools:context="com.example.vendingmachine.ui.activity.LoginActivity">

    <com.example.vendingmachine.ui.customview.MyVideoView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_video_view"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/layout_dl_macid"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/login_tips_size"
            android:text="@string/login_tips"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/et_number"
            android:hint="请输入机台号"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:theme="@style/login_editText_style" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/et_number_pass"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="请输入密码"
            android:theme="@style/login_editText_style" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/bt_confirm"
            android:textSize="20dp"
            android:button="@null"
            android:textColor="@drawable/bt_login_text_color"
            android:background="@drawable/bt_login_sure_bj"
            android:text="登录"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/iv_log"
        android:src="@mipmap/hong_xian_log" />
</FrameLayout>
